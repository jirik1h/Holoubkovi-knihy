<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="5dp"
    android:background="#fff"
    android:padding="8dp"
    android:id="@+id/container"
    tools:context=".MainActivity">>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="@string/title"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:text="@string/category" />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/author"
            android:maxLines="2"
            />

        <Button
            android:id="@+id/button_add_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/favourite_add" />

        <Button
            android:id="@+id/button_remove_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/favourite_remove"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/inserted_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/favourite_added"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>